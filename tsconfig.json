{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "rootDir": "src",
        "outDir": "lib",
        "inlineSourceMap": true,
        "inlineSources": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2015.promise",
            "es5"
        ]
    },
    "include": [
        "src/**/*.ts",
        "node_modules/tslib/*.d.ts",
        "typings/**/*.d.ts"
    ]
}